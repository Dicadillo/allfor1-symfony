       {# the image lives at "public/images/logo.png" #}
     <img src="{{ asset('images/logo.png') }}" alt="Logo" class="h-10 w-auto border-e-2">
        <span class="text-white ml-2 text-lg font-semibold">AllFor 1</span>
        </div>



<nav class="navbar navbar-expand-lg navbar-light bg-light">
